
@model List<T2207A_MVC.Entities.Category>
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h1>List product</h1>
        </div>
        <div class="col-lg-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary float-end">Add Category</a>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.id</th>
                            <td>@item.name</td>
                            <td>
                                <a class="me-2" href="@Url.ActionLink("Edit", "Category", new {id=item.id})"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a onclick="return confirm('Ban muon xoa danh muc @item.name')" href="@Url.ActionLink("Delete", "Category", new {id=item.id})"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>