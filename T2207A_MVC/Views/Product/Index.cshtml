@model List<T2207A_MVC.Entities.Product>
@{
    ViewData["Title"] = "Product Page";
}
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h1>List Product</h1>
        </div>
        <div class="col-lg-6">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary float-end">Add Product</a>
        </div>
        
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Category</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.id</th>
                            <td>@item.name</td>
                            <td>@item.price</td>
                            <td>@item.description</td>
                            <td>@item.category_id</td>
                            <td>@item.brand_id</td>
                            <td>
                                <a class="me-2" asp-controller="Product" asp-action="Edit"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a asp-controller="Product" asp-action=""><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

