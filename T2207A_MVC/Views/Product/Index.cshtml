@model List<T2207A_MVC.Entities.Product>
@{
    ViewData["Title"] = "Product Page";
}
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h1>List Product</h1>
        </div>
        <div class="col-lg-6">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary float-end">Add Product</a>
        </div>
        
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Category</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.id</th>
                            <th><img src="@item.image" style="width: 80px; height: 80px; object-fit: contain" /></th>
                            <td>@item.name</td>
                            <td>@item.price</td>    
                            <td>@item.description</td>
                            <td>@item.category.name</td>
                            <td>@item.brand.name</td>
                            <td>
                                <a class="me-2" href="@Url.ActionLink("Edit", "Product", new {id=item.id})"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a onclick ="return confirm('Ban muon xoa danh muc @item.name')" href="@Url.ActionLink("Delete", "Product", new {id=item.id})"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

